/* pages/discuss/index.wxss */
.p {
  width: 100vw;
  background-size: contain;
  background-position: top;
  background-repeat: no-repeat;
  /* background: -webkit-linear-gradient(top, #AEEEEE, #F8F8F8, #F8F8F8, #F8F8F8, #F8F8F8, #F8F8F8, #F8F8F8); */
}

.bg {
  position: fixed;
  width: 100vw;
  height: 100vh;
  z-index: -1;
  background: linear-gradient(to bottom, #aeebd7, #f6f6f6 30%);
}

.page {
  width: 90vw;
  margin: auto;
}

.search {
  position: relative;
  display: flex;
  height: 12vw;
  justify-content: space-between;
  margin-top: 20rpx;
}

.search .input-wrap {
  box-sizing: border-box;
  width: 75vw;
  height: 9vw;
  border-radius: 4.5vw;
  background-color: #fff;
  margin: 0.5vh 0;
  display: flex;
  align-items: center;
  padding-left: 4vw;
  padding-right: 2vw;
}

.search .input {
  flex: 1;
}

.search .searchIcon {
  width: 70rpx;
  height: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 10rpx;
}

.search .image {
  position: relative;
}

.search .image image {
  width: 10vw;
  height: 10vw;
}

.search .image .dot {
  position: absolute;
  width: 3vw;
  height: 3vw;
  border-radius: 1.5vw;
  background-color: #FF5D5D;
  right: -0.5vw;
  top: -1vw;
}

.inputQues {
  display: flex;
  justify-content: space-between;
  width: 90vw;
  margin-top: 15px;
}

.inputQues input {
  box-sizing: border-box;
  width: 65vw;
  height: 10vw;
  background-color: #fff;
  border-radius: 5vw;
  padding-left: 20px;
  padding-right: 20px;
}

.inputQues .btn {
  width: 20vw;
  height: 10vw;
  line-height: 10vw;
  border-radius: 5vw;
  color: #fff;
  background: -webkit-linear-gradient(left, #FFCDA0, #FF9393, #FF5050);
}

.question {
  display: flex;
  height: 15vh;
  border-radius: 10px;
  justify-content: space-around;
  background-color: #fff;
  border-radius: 10px;
  margin-top: 15px;
}

.question .left {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 55%;
  height: 10vh;
  margin: auto;
  margin-left: 5%;
}

.question .left .num {
  font-size: 24px;
  font-weight: bold;
}

.question .left .text {
  color: #BABABA;
  font-size: 14px;
}

.question .right {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 40%;
  height: 10vh;
  margin: auto;
}

.question .right .btn {
  width: 30vw;
  height: 10vw;
  border-radius: 5vw;
  background: -webkit-linear-gradient(left, #FFCDA0, #FF9393, #FF5050);
  line-height: 10vw;
  text-align: center;
  color: #fff;
  font-size: 18px;
}

.question .right .time {
  color: #BABABA;
  font-size: 14px;
  margin-left: 3px;
}

.line {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin: 15px 0;
}

.title {
  font-size: 20px;
  font-weight: bold;
}

.line .more {
  color: #585656;
  font-size: 14px;
  line-height: 30px;
}

.answer {
  box-sizing: border-box;
  height: 20vh;
  width: 100%;
  border-radius: 15px;
  background-color: #fff;
  margin-bottom: 15px;
  padding: 5vw;
  padding-bottom: 33vw;
}

.answer .ques {
  position: relative;
  box-sizing: border-box;
  width: 80vw;
  height: 200rpx;
  box-shadow: 3px 3px 15px 1px #dfdddd;
  background-color: #fff;
  border-radius: 15px;
  padding: 5vw;
}

.answer .ques:nth-child(2) {
  transform: scale(.9);
  top: -160rpx;
}

.answer .ques .box {
  position: absolute;
  box-sizing: border-box;
  width: 70vw;
  height: 3vw;
  background-color: #fff;
  border-bottom-left-radius: 15px;
  border-bottom-right-radius: 15px;
  box-shadow: 5px 5px 20px #dfdddd;
  left: 5vw;
  bottom: -3vw;
}

.answer .bottom {
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  margin-top: 20px;
}

.answer .bottom text {
  color: #9A9A9A;
  line-height: 6vw;
}

.answer .bottom .btns {
  display: flex;
  justify-content: space-between;
  width: 35vw;
}

.answering {
  margin-bottom: 5vw;
}

.answering .myAnswerContent {
  box-sizing: border-box;
  width: 90%;
  height: 30vw;
  background-color: rgb(231, 247, 243);
  border-radius: 20px;
  padding: 20px;
  margin: auto;
  margin-bottom: 5vw;
  color: #999;
}

.answering .btnsss {
  display: flex;
  justify-content: space-around;
  width: 90%;
  margin: auto;
}

.answering .btnsss .post {
  width: 30vw;
  height: 10vw;
  text-align: center;
  line-height: 10vw;
  border-radius: 5vw;
  color: #fff;
  background: -webkit-linear-gradient(left, #FFCDA0, #FF9393, #FF5050);
}

.answering .btnsss .cancel {
  box-sizing: border-box;
  width: 30vw;
  height: 10vw;
  text-align: center;
  line-height: 10vw;
  border-radius: 5vw;
  background-color: rgb(252, 252, 252);
  border: 1px solid #bbb;
  color: #999;
}

.btn {
  width: 16vw;
  height: 6vw;
  line-height: 6vw;
  border-radius: 2vw;
  text-align: center;
}

.answer .bottom .btns .next {
  background-color: #F3F3F3;
  color: #969696;
}

.answer .bottom .btns .ans {
  background-color: #54B494;
  color: #fff;
}

.answering .title {
  width: 90%;
  margin: 0 auto;
  font-size: 1em;
  margin-bottom: 20rpx;
}

.searchHistory {
  margin-top: 40rpx;
}

.searchHistory .top {
  display: flex;
  justify-content: space-between;
  font-size: 1.1em;
  font-weight: bold;
  letter-spacing: 3rpx;
  color: rgb(85, 85, 85);
}

.searchHistory .top .left {
  display: flex;
  align-items: center;
}

.searchHistory .top .right {
  color: rgba(154, 154, 154, 1);
  font-weight: 500;
  transform: scaleX(1.3);
}

.searchHistory .historyList {
  display: flex;
  flex-wrap: wrap;
}

.searchHistory .historyList .item {
  background: rgb(238, 238, 238);
  margin: 20rpx;
  color: rgb(82, 189, 153);
  padding: 10rpx 20rpx;
  font-size: .9em;
  border-radius: 10rpx;
  letter-spacing: 1rpx;
}

.searchQuesItem {
  width: 100%;
  background-color: #fff;
  margin: 30rpx 0;
  border-radius: 30rpx;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
}

.searchQuesItem .top {
  font-weight: bold;
  font-size: 1.1em;
  margin-bottom: 10rpx;
  border-bottom: 1px solid #EFEFEF;
  padding-bottom: 20rpx;
}

.searchQuesItem .content {
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.avatar {
  width: 65rpx;
  height: 65rpx;
  border-radius: 50%;
  background: rgba(217, 217, 217, 1);
  margin-right: 20rpx;
}
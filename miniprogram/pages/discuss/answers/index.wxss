/* pages/discuss/answers/index.wxss */
.p {
  width: 100vw;
  /* background: -webkit-linear-gradient(top, #AEEEEE,#F8F8F8, #F8F8F8, #F8F8F8); */
  background: linear-gradient(to bottom, #aeebd7, #f6f6f6 30%);
  min-height: 92vh;
  overflow: auto;
  box-sizing: border-box;
  padding-bottom: 8vh;
}

.page {
  width: 100vw;
  background-color: #FDFDFD;
  border-radius: 20px 20px 0 0;
  min-height: 100vh;
}

.head {
  width: 90vw;
  margin: auto;
  padding-top: 25px;
}

.head .question {
  width: 100%;
  font-size: 20px;
  font-weight: bold;
}

.head .info {
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding-top: 10px;
}

.head .info text {
  color: #BABABA;
  font-size: 14px;
}

.head .line {
  width: 100%;
  height: 1px;
  background-color: #EFEFEF;
  margin-top: 10px;
}

.answer {
  width: 90vw;
  margin: 20px auto;
  padding-bottom: 3vw;
  border-bottom: 1px solid #EFEFEF;
}

.answer .user {
  display: flex;
  align-items: center;
}

.answer .user image {
  width: 10vw;
  height: 10vw;
  background-color: #D9D9D9;
  border-radius: 5vw;
  overflow: hidden;
  margin-right: 20rpx;
}

.answer .user text {
  font-size: 17px;
  font-weight: bold;
  color: #555;
}

.answer .content {
  margin-top: 10px;
  -webkit-line-clamp: 3;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #555;
}

.write {
  width: 90vw;
  margin: auto;
  margin-top: 5vw;
}

.writeCom {
  box-sizing: border-box;
  width: 100%;
  height: 30vw;
  background-color: rgb(243, 255, 252);
  border-radius: 20px;
  padding: 20px;
}

.write .btnss {
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-top: 5vw;
}

.write .btnss .complete {
  width: 30vw;
  height: 10vw;
  line-height: 10vw;
  text-align: center;
  color: #fff;
  border-radius: 5vw;
  background: -webkit-linear-gradient(left, #FFCDA0, #FF9393, #FF5050);
}

.write .btnss .cancel {
  box-sizing: border-box;
  width: 30vw;
  height: 10vw;
  line-height: 10vw;
  text-align: center;
  border-radius: 5vw;
  background-color: rgb(252, 252, 252);
  border: 1px solid #bbb;
  color: #999;
}

.btns {
  width: 100%;
  height: 8vh;
  background: linear-gradient(to bottom, #68e9be, #aeebd7);
  position: fixed;
  bottom: 0;
  box-sizing: border-box;
  text-align: center;
  padding-top: 20rpx;
  font-size: 1.1em;
  color: rgb(235, 252, 244);
  font-weight: bold;
  letter-spacing: 10rpx;
}
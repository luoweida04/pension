/* pages/discuss/details/index.wxss */
.p {
  width: 100vw;
  /* background: -webkit-linear-gradient(top, #AEEEEE,#F8F8F8, #F8F8F8, #F8F8F8); */
  background: linear-gradient(to bottom, #aeebd7, #f6f6f6 30%);
}

.page {
  width: 100vw;
  background-color: #FDFDFD;
  border-radius: 20px 20px 0 0;
  min-height: 100vh;
}

.head {
  width: 90vw;
  margin: auto;
  padding-top: 25px;
}

.head .question {
  width: 100%;
  font-size: 20px;
  font-weight: bold;
}

.head .info {
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding-top: 10px;
}

.head .info text {
  color: #BABABA;
  font-size: 14px;
}

.head .line {
  width: 100%;
  height: 1px;
  background-color: #EFEFEF;
  margin-top: 10px;
}

.answer {
  width: 90vw;
  margin: 20px auto;
  padding-bottom: 3vw;
}

.answer .user {
  display: flex;
  align-items: center;
}

.answer .user image {
  width: 10vw;
  height: 10vw;
  background-color: #D9D9D9;
  border-radius: 5vw;
  overflow: hidden;
  margin-right: 20rpx;
}

.answer .user text {
  font-size: 17px;
  font-weight: bold;
}

.answer .content {
  margin-top: 10px;
}

.noComments {
  width: 100%;
  text-align: center;
  margin-top: 20vw;
  font-size: 20px;
  color: rgb(218, 218, 218);
}

.comments {
  width: 95vw;
  background-color: #fff;
  border-radius: 10px;
  margin: auto;
  margin-bottom: 15vh;
}

.comment {
  width: 90vw;
  margin: auto;
  border-bottom: 1px solid #EFEFEF;
  padding-bottom: 3vw;
}

.comment .head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.comment .head .user {
  display: flex;
  align-items: center;
}

.comment .head .user image {
  width: 8vw;
  height: 8vw;
  background-color: #D9D9D9;
  border-radius: 4vw;
  overflow: hidden;
  margin-right: 15rpx;
}

.comment .head .user .detail {
  display: flex;
  flex-direction: column;
  color: #555;
}

.comment .head .user .userName {
  font-size: 14px;
  font-weight: bold;
  color: #555;
}

.comment .head .date {
  color: #BABABA;
  font-size: 12px;
}

.comment .content {
  padding-left: 8vw;
  padding-top: 10px;
  color: #999999;
}

.comment .support {
  display: flex;
  align-items: center;
}

.comment .support image {
  width: 6vw;
  overflow: hidden;
}

.comment .support .count {
  margin-left: 10rpx;
}

.write {
  width: 90vw;
  margin: auto;
  margin-top: 5vw;
}

.writeCom {
  box-sizing: border-box;
  width: 100%;
  height: 30vw;
  background-color: rgb(243, 255, 252);
  border-radius: 20px;
  padding: 20px;
}

.write .btnss {
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-top: 5vw;
}

.write .btnss .complete {
  width: 30vw;
  height: 10vw;
  line-height: 10vw;
  text-align: center;
  color: #fff;
  border-radius: 5vw;
  background: -webkit-linear-gradient(left, #FFCDA0, #FF9393, #FF5050);
}

.write .btnss .cancel {
  box-sizing: border-box;
  width: 30vw;
  height: 10vw;
  line-height: 10vw;
  text-align: center;
  border-radius: 5vw;
  background-color: rgb(252, 252, 252);
  border: 1px solid #bbb;
  color: #999;
}

.btns {
  width: 100%;
  height: 15vh;
  background: #fff;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-evenly;
  box-sizing: border-box;
  padding-top: 40rpx;
  font-size: 15px;
}

.btns .agree {
  width: 42%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx;
  background: rgba(148, 218, 195, 0.18);
  border-radius: 500rpx;
  box-sizing: border-box;
  padding: 0 40rpx;
  color: rgba(45, 145, 107, 1);
}

.agree .line {
  width: 1rpx;
  height: 40rpx;
  background: #74C3A4;
  /* margin: 0 15rpx 0 15rpx; */
}

.btns .post {
  width: 42%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(244, 244, 244, 1);
  border-radius: 500rpx;
  color: rgba(176, 176, 176, 1);
}

.comments .title{
  display: flex;
  width: 100%;
  align-items: center;
  color: #3cbb8a;
}

.comments .line{
  flex: 1;
  height: 1px;
  background: #3fc491;
  margin: 0 30rpx;
}
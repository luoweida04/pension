/* pages/plan/index.wxss */

.plan{
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.item{
  width: 90%;
  height: auto;
  position: relative;
  margin: 16rpx 0;
}

.info{
  position: absolute;
  top: 0;
  height: 100%;
  width: 100%;
}

.status{
  position: absolute;
  display: inline-flex;
  align-items: center;
  box-sizing: border-box;
  padding: 5rpx 20rpx;
  top: 40rpx;
  right: 40rpx;
  font-size: .4em;
  border-radius: 10rpx;
}

.continue{
  background: #FFEBB6;
  color: #FB9600;
}

.finished{
  background: #C7F4D1;
  color: #37AF4A;
}

.title{
  color: #fff;
  font-weight: bold;
  font-size: 1.2em;
  position: absolute;
  bottom: 90rpx;
  right: 40rpx;
  max-width: 40%;
  text-align: end;
}

.count{
  position: absolute;
  bottom: 40rpx;
  right: 40rpx;
  color: rgba(255, 255, 255, .7);
}
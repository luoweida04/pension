/* pages/my/index.wxss */
.page {
  width: 90vw;
  background-color: #F8F8F8;
  margin: auto;
}
.card {
  box-sizing: border-box;
  width: 100%;
  height: 55vw;
  border-radius: 10px;
  background-color: #fff;
  padding: 5vw;
}
.card .info {
  display: flex;
  width: 80vw;
  height: 20vw;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #EFEFEF;
  padding-bottom: 20rpx;
}
.card .info .left {
  display: flex;
  flex-direction: column;
  width: 40vw;
}
.card .info .left text {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 15rpx;
}
.card .info .left .btn {
  height: 7vw;
  background-color: #54B494;
  color: #FFFFFF;
  font-weight: bold;
  border-radius: 6px;
  text-align: center;
  line-height: 7vw;
  font-size: 15px;
  letter-spacing: 1rpx;
}
.card .info image {
  width: 15vw;
  height: 15vw;
  background-color: pink;
  border-radius: 7.5vw;
}
.card .btns {
  display: flex;
  justify-content: space-around;
  width: 80vw;
  margin: auto;
  margin-top: 15rpx;
}
.card .btns .btn {
  display: flex;
  flex-direction: column;
  width: 20vw;
  height: 20vw;
}
.card .btns .btn image{
  width: 10vw;
  margin: auto;
}
.card .btns .btn text {
  text-align: center;
  font-size: 14px;
}
.invite {
  width: 100%;
  margin-top: 15px;
}
.box {
  width: 100%;
  background-color: #fff;
  border-radius: 15px;
  margin: 15px auto;
}
.box .line {
  box-sizing: border-box;
  width: 100%;
  height: 12vw;
  display: flex;
  justify-content: space-between;
  text-align: center;
  line-height: 12vw;
  padding: 0 20px;
  border-bottom: 1px solid #EFEFEF;
}
.box .line .gt{
  font-size: 1.3em;
  color: #999999;
}
.box .line .left {
  display: flex;
  width: 30vw;
}
.box .line .left image {
  width: 5vw;
  /* height: 5vw; */
  /* background-color: pink; */
  /* border-radius: 2.5vw; */
  margin-top: 3.8vw;
  margin-right: 3vw;
}
.title {
  font-size: 20px;
  font-weight: bold;
}
.wanjing {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin: 15px auto;
}
.wanjing image {
  width: 43vw;
}
.more {
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin: 15px auto;
  background-color: #fff;
  border-radius: 20px;
  padding: 16px;
}
.more .block image {
  width: 14vw;
  margin: auto;
}
.more .block {
  display: flex;
  flex-direction: column;
}
.more .block text {
  text-align: center;
}
.more .block .txt1 {
  font-size: 14px;
  font-weight: bold;
  margin: 3px auto;
}
.more .block .txt2 {
  font-size: 12px;
  color: #B7B7B7;
}
/* pages/my/edit/index.wxss */

.page {
  width: 90vw;
  margin: 0 auto;
}

.name {
  margin-top: 30rpx;
}

.label {
  font-size: .95em;
}

.name .input-wrap {
  box-sizing: border-box;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  margin: 30rpx 0;
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
}

.name .btn {
  width: 60rpx;
  height: 60rpx;
  background: rgba(55, 170, 132, 1);
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.info {
  width: 100%;
}

.info .header {
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-content: center;
}

.info .header .add {
  background: #37aa84;
  color: #fff;
  box-sizing: border-box;
  padding: 12rpx 24rpx;
  border-radius: 15rpx;
  font-size: .8em;
}

.info .wrap {
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-sizing: border-box;
  margin-bottom: 50rpx;
}

.info .top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info .left .relationship {
  font-size: 1.2em;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: flex;
}

.info .left .state{
  padding: 2rpx 20rpx;
  box-sizing: border-box;
  color: #37aa84;
  border: 1px solid #37aa84;
  border-radius: 15rpx;
  font-size: .7em;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
}

.info .left .change{
  padding: 2rpx 20rpx;
  box-sizing: border-box;
  color: #fff;
  border: 1px solid #37aa84;
  border-radius: 15rpx;
  background: #37aa84;
  font-size: .7em;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
}

.info .left .pre {
  font-size: .8em;
  color: rgba(137, 137, 137, 1);
}

.info .right {
  background: rgba(55, 170, 132, 1);
  color: #fff;
  height: 60rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  font-size: .9em;
}

.info .detail {
  width: 100%;
  background: #f9f9f9;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  margin-top: 10rpx;
}

.info .detail .edit {
  display: flex;
  align-items: center;
}

.info .detail .item {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
}

.info .detail .item .value {
  color: rgba(137, 137, 137, 1);
}

.info .detail .historyList,
.info .detail .targetList {
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0;
}

.info .detail .historyItem,
.info .detail .targetItem {
  border: 1rpx solid rgba(214, 214, 214, 1);
  box-sizing: border-box;
  padding: 6rpx 16rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  font-size: .9em;
  color: rgba(114, 114, 114, 1);
}
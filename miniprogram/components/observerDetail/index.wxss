/* components/observerDetail/index.wxss */
.page {
  position: relative;
  box-sizing: border-box;
  width: 42.5vw;
  height: 30vw;
  border-radius: 10px;
  margin-bottom: 15px;
  background-color: #fff;
  padding: 5vw;
}

.head {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 10vw;
}

.head .text {
  line-height: 10vw;
}

.head image {
  width: 5vw;
}

.page .content {
  position: absolute;
  width: 80%;
  font-size: 16px;
  color: #888888;
  left: 5vw;
  bottom: 5vw;

  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  line-clamp: 2;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
}

.page .content .unit {
  font-size: 12px;
  color: #BABABA;
  margin-left: 1vw;
}

.bg {
  position: absolute;
  width: 15vw;
  bottom: 2vw;
  right: 2vw;
}